<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn3"
                style="@style/btn"
                android:text="消息对话框" />

            <Button
                android:id="@+id/btn4"
                style="@style/btn"
                android:text="选择对话框" />

            <Button
                android:id="@+id/btn5"
                style="@style/btn"
                android:text="输入对话框" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btn6"
                style="@style/btn"
                android:text="底部对话框" />

            <!--<Button-->
            <!--android:id="@+id/btn7"-->
            <!--style="@style/btn"-->
            <!--android:text="从上面弹出的弹窗" />-->
            <Button
                android:id="@+id/btn8"
                style="@style/btn"
                android:text="底部菜单" />

            <Button
                android:id="@+id/btn9"
                style="@style/btn"
                android:text="底部输入框" />


            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btn10"
                style="@style/btn"
                android:text="完全自定义对话框" />

            <Button
                android:id="@+id/btn11"
                style="@style/btn"
                android:text="对话框显示在按钮上" />

            <Button
                android:id="@+id/btn12"
                style="@style/btn"
                android:text="完全自定义对话框抽取" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>