<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn1"
                style="@style/btn"
                android:text="数组列表" />

            <Button
                android:id="@+id/btn2"
                style="@style/btn"
                android:text="数据列表" />

            <Button
                android:id="@+id/btn3"
                style="@style/btn"
                android:text="弹窗" />

            <Button
                android:id="@+id/btn4"
                style="@style/btn"
                android:text="dialogx弹窗" />


            <Button
                android:id="@+id/btn9"
                style="@style/btn"
                android:text="抽奖" />

            <Button
                android:id="@+id/btn10"
                style="@style/btn"
                android:text="toast" />


            <Button
                android:id="@+id/btn11"
                style="@style/btn"
                android:text="文件操作" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_c6c6c6" />

    <com.fancy.androidutils.widget.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />


</LinearLayout>
