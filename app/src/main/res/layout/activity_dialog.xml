<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn3"
                style="@style/btn"
                android:text="带两个按钮的弹窗" />

            <Button
                android:id="@+id/btn4"
                style="@style/btn"
                android:text="带一个按钮的弹窗" />

            <Button
                android:id="@+id/btn5"
                style="@style/btn"
                android:text="从左边弹出的弹窗" />

            <Button
                android:id="@+id/btn6"
                style="@style/btn"
                android:text="从右边弹出的弹窗" />

            <!--<Button-->
            <!--android:id="@+id/btn7"-->
            <!--style="@style/btn"-->
            <!--android:text="从上面弹出的弹窗" />-->
            <Button
                android:id="@+id/btn8"
                style="@style/btn"
                android:text="从下面弹出的弹窗" />

            <Button
                android:id="@+id/btn9"
                style="@style/btn"
                android:text="加载框" />


            <Button
                android:id="@+id/btn10"
                style="@style/btn"
                android:text="原生alertdialog" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_c6c6c6" />

</LinearLayout>
